@model CustomerFollowUpDto
@{
    Layout = "_LayoutAdmin";
    var id = Model.Id;
}

        <!-- Content -->
        <div class="container-xxl flex-grow-1 container-p-y">
            <div class="container-fluid">







        <div class="d-flex flex-row">
            <a asp-area="Admin" asp-controller="CustomerFollowUp" asp-action="Index" class="btn btn-icon rounded-pill btn-secondary mb-3 text-white">
                <span class="bx bxs-log-out-circle display-3"></span>
            </a>
            <h4 class="align-self-center ms-2">THÔNG TIN CHĂM KHÁCH</h4>
        </div>




        <form asp-area="Admin" asp-controller="CustomerFollowUp" asp-action="Edit">
            <div>
                <input type="hidden" asp-for="Id" />
                <div class="row">
                    <div class="mb-3 col-sm">
                        <label class="form-label text-capitalize">SĐT Khách</label>
                        <input type="number" class="form-control " placeholder="Nhập giá dịch vụ" />
                    </div>
                    <div class="mb-3 col-sm">
                        <label class="form-label text-none">Tên Khách</label>
                        <input type="number" class="form-control " placeholder="Nhập số ngày theo dõi" />
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label text-capitalize">Mã khách hàng</label>
                    <input type="hidden" asp-for="CustomerId" />
                    <input asp-for="CustomerId" type="text" class="form-control " disabled placeholder="Nhập tên dịch vụ" />
                </div>
                <div class="row">
                    <div class="mb-3 col-sm">
                        <input type="hidden" asp-for="UserId" />
                        <label class="form-label text-capitalize">Nhân viên tạo lịch</label>
                        <select name="UserId" class="form-control" disabled asp-items="ViewBag.User"></select>
                    </div>
                    <div class="mb-3 col-sm">
                        <label class="form-label text-none">Trạng thái</label>
                        <select name="FollowUpStatusId" class="form-control" asp-items="ViewBag.FollowUpStatus"></select>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label text-capitalize">Chi nhánh chịu trách nhiệm</label>
                    <select name="FollowUpBranchId" class="form-control" asp-items="ViewBag.Branch"></select>
                </div>

            </div>
            <button type="reset" class="btn btn-secondary text-white">Nhập lại</button>
            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
        </form>









            </div>
        </div>
        <!-- / Content -->
